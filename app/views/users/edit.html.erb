<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>アカウントの編集</h2>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      <%= link_to "一覧ページに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :employee_number, "社員番号"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :employee_number%>
          </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :last_name, "氏"%>
            <%= f.label :first_name, "名"%>
          </div>
          <div class='field-input-name'>
            <%= f.text_field :last_name, autofocus: true%>
            <%= f.text_field :first_name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, "Eメール"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field-down'>
          <div class='field-label'>
            <%= f.label :department, "部署名"%>
          <div class='field-input'>
            <%= f.text_field :department, autocomplete: "off"%>
          </div>
          <div class='field-label'>
            <%= f.label :position, "役職名"%>
          <div class='field-input'>
            <%= f.text_field :position, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "更新する", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
