<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>新規アカウントの作成</h2>
    </div>

    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :employee_number, "社員番号"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :employee_number%>
          </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :last_name, "氏"%>
            <%= f.label :first_name, "名"%>
          </div>
          <div class='field-input-name'>
            <%= f.text_field :last_name, autofocus: true%>
            <%= f.text_field :first_name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, "Eメール"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password, "パスワード"%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation, "パスワード【再入力】"%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

        <div class='field-down'>
          <div class='field-label'>
            <%= f.label :department, "部署名"%>
          <div class='field-input'>
            <%= f.text_field :department, autocomplete: "off"%>
          </div>
          <div class='field-label'>
            <%= f.label :position, "役職名"%>
          <div class='field-input'>
            <%= f.text_field :position, autocomplete: "off"%>
          </div>
        </div>
        
        <div class='actions'>
          <%= f.submit "新規作成", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>